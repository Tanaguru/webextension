{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"short_name": "Tanaguru",
	"version": "1.0",
	"author": "Tanaguru",
	"description": "__MSG_extensionDescription__",
	"homepage_url": "__MSG_extensionHomepageUrl__",
	"icons": {
		"32": "ressources/images/icons/tanaguru-32-dark.png",
		"48": "ressources/images/icons/tanaguru-48.png",
		"96": "ressources/images/icons/tanaguru-96.png"
	},
	"permissions": [
	    "<all_urls>", "downloads", "management", "notifications", "storage", "tabHide", "tabs"
	],
	"browser_action": {
		"browser_style": false,
		"default_icon": {
			"32": "ressources/images/icons/tanaguru-32-dark.png"
		},
		"default_title": "__MSG_extensionName__",
		"default_popup": "popup/tanaguru-popup.html",
		"theme_icons": [{
		  "light": "ressources/images/icons/tanaguru-32-light.png",
		  "dark": "ressources/images/icons/tanaguru-32-dark.png",
		  "size": 32
		}]
	},
	"background": {
		"scripts": [
            "browser-polyfill.js",
            "ressources/scripts/background_scripts/background.js"
        ]
	},
	"content_scripts": [
	  {
	    "matches": ["<all_urls>"],
	    "js": [
            "browser-polyfill.js",
            "ressources/scripts/content_scripts/content.js", 
            "ressources/scripts/content_scripts/dom_extension/main-languages.js", 
            "ressources/scripts/content_scripts/dom_extension/accessibleName.js", 
            "ressources/scripts/content_scripts/dom_extension/html.js", 
            "ressources/scripts/content_scripts/dom_extension/aria.js", 
            "ressources/scripts/content_scripts/dom_extension/canBeReachedUsingKeyboardWith.js", 
            "ressources/scripts/content_scripts/dom_extension/isNotExposedDueTo.js", 
            "ressources/scripts/content_scripts/dom_extension/isNotVisibleDueTo.js"
        ]
	  }
    ],
    "devtools_page": "devtools/tanaguru-devtools.html",
	"default_locale": "fr"
}
